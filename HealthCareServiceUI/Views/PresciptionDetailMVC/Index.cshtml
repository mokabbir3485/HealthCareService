@model HealthCareServiceUI.Models.PresciptionDetailModel

@{
    ViewBag.Title = "Presciption Medicine";
}

<div class="container">
    @*<div class="container" style="width:400px; height:500px;">*@
    @using (Html.BeginForm("Index", "PresciptionDetailMVC", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Enter Medicine & Doze</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Prescip_id, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.Prescip_id, ViewBag.Presciptionlist as SelectList, "---Select Presciption ID---", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Prescip_id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownListFor(x => x.Drug_id, ViewBag.Druglist as SelectList, "---Select Drug Name---", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Doze, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Doze, new { @class = "form-control", @placeholder = "Doze(Ex.0+0+0)" })
                    @Html.ValidationMessageFor(model => model.Doze, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Duration, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(x => x.Duration, new { @class = "form-control", @placeholder = "Duration (Ex.5 Days)" })
                    @Html.ValidationMessageFor(model => model.Duration, "", new { @class = "text-danger" })
                    <br />
                    <input type="submit" value="submit" class="btn btn-block btn-danger" />
                </div>
            </div>

        </div>
    }
</div>




<div>
    @Html.ActionLink("Back to List", "IndexList")
</div>


