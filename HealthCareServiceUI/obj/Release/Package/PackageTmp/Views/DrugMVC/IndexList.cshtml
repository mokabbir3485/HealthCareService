@model IEnumerable<HealthCareServiceUI.Models.DrugModel>
@{
    ViewBag.Title = "Medicine Information";
}
<h2>Drug List</h2>
<p>
    @Html.ActionLink("Create New", "Index")
</p>
<table class="table">
    <tr>
        <th>
            Select
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Strength)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Generic_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand_id)
        </th>

        <th></th>
