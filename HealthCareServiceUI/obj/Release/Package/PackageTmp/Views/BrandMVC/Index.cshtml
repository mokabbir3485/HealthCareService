@model IEnumerable<HealthCareServiceUI.Models.BrandClass>

@{
    ViewBag.Title = "Medicine Information";
}

<h2>Brand List</h2>

<p>
    @Html.ActionLink("Create New", "AddIndex")
</p>
<table class="table">
    <tr>
        <th>
            Select
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BrandName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(">>>", "Details", new { id = item.Brand_id })
            </td>
